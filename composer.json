{
    "name": "bright-components/adr",
    "description": "A collection of BrightComponents packages for ADR organization of your Laravel app.",
    "version": "2.0.0",
    "keywords": [
        "bright-components",
        "adr",
        "action",
        "responder",
        "services",
        "laravel"
    ],
    "homepage": "https://github.com/bright-components/adr",
    "license": "MIT",
    "authors": [
        {
            "name": "Clayton Stone",
            "email": "clay@phpstage.com",
            "homepage": "https://codestage.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "bright-components/services": "^2.0-stable",
        "bright-components/actions": "^1.0-stable",
        "bright-components/responders": "^2.0-stable",
        "bright-components/valid": "^1.0-stable"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "BrightComponents\\Adr\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrightComponents\\Adr\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BrightComponents\\Adr\\AdrServiceProvider"
            ]
        }
    }
}
